# Configuration de production - Mon Budget API
NODE_ENV="production"
PORT=3000

# Base de données MySQL (Docker)
DATABASE_URL="mysql://budget_user:SecurePassword123!@db:3306/budget_production"

# MySQL - Variables pour Docker Compose
MYSQL_PASSWORD="SecurePassword123!"
MYSQL_ROOT_PASSWORD="RootSecurePassword456!"

# JWT - Clés de production sécurisées
JWT_SECRET="mon-budget-jwt-production-key-super-secure-2024-v1.0-32chars-min"
JWT_REFRESH_SECRET="mon-budget-refresh-jwt-production-key-ultra-secure-2024-v1.0-64chars"
JWT_EXPIRES="1h"
JWT_REFRESH_EXPIRES="7d"

# Sécurité
BCRYPT_SALT_ROUNDS=12

# CORS - Ajustez selon votre domaine
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# Application
API_PREFIX="api"
GLOBAL_PREFIX="api"